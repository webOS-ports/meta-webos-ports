[Unit]
Description=Telephony service
Requires=dbus.service
After=dbus.service

[Service]
Type=dbus
BusName=org.ofono
User=root
EnvironmentFile=-/var/lib/ofono/environment.conf
ExecStart=/usr/sbin/ofonod -n --nobacktrace $OFONO_OPTIONS
StandardError=null
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

		PlaybackPCM "hw:0,0"
	}
}
SectionDevice."DigitalMic" {
	Comment "Internal Microphone"
	ConflictingDevice [
		"HeadsetMic"
	]
	EnableSequence [
		cdev "hw:0"
		cset "name='Mic1 Capture Switch' on"
	]
	DisableSequence [
		cdev "hw:0"
		cset "name='Mic1 Capture Switch' off"
	]
	Value {
		CapturePriority 200
		CapturePCM "hw:0,0"
		CaptureChannels "2"
	}
}
SectionDevice."HeadsetMic" {
	Comment "Headset Microphone"
	ConflictingDevice [
		"DigitalMic"
	]
	EnableSequence [
		cdev "hw:0"
		cset "name='Mic2 Capture Switch' on"
	]
	DisableSequence [
		cdev "hw:0"
		cset "name='Mic2 Capture Switch' off"
	]
	Value {
		CapturePriority 100
		CapturePCM "hw:0,0"
		CaptureChannels "2"
	}
}
SectionDevice."Headphone" {
	Comment "Headset"
	EnableSequence [
		cdev "hw:0"
		cset "name='AIF1 DA0 Stereo Playback Route' Stereo"
		cset "name='Headphone Playback Switch' on"
		cset "name='Headphone Playback Volume' 40%"
	]

	DisableSequence [
		cdev "hw:0"
		cset "name='Headphone Playback Switch' off"
	]

	Value {
		PlaybackVolume "Headphone Playback Volume"
		PlaybackSwitch "Headphone Playback Switch"
		PlaybackChannels "2"
		PlaybackPriority 100
		PlaybackPCM "hw:0,0"
	}
}


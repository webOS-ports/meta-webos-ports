+SectionDevice."Handset" {
+	#Name "Handset"
+	Comment "Handset Microphone"
+
+	ConflictingDevice [
+		"Headset"
+	]
+
+	EnableSequence [
+		cdev "hw:apq8064tablasnd"
+
+		cset "name='MultiMedia1 Mixer SLIM_0_TX' 0"
+		cset "name='SLIM_0_TX Channels' One"
+		cset "name='SLIM TX7 MUX' DEC7"
+		cset "name='DEC7 MUX' ADC1"

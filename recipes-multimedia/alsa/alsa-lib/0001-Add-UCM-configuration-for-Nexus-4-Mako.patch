+		cset "name='DEC7 Volume' 0"
+		cset "name='ADC1 Volume' 0"
+		cset "name='MICBIAS1 CAPLESS Switch' 1"
+	]
+
+	Value {
+		CaptureChannels "1"
+	}
+}

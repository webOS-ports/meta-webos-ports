From 6d29bfc2092df76392e703f59cd94e2c320afccc Mon Sep 17 00:00:00 2001
From: Simon Busch <morphis@gravedo.de>
Date: Mon, 10 Sep 2012 08:40:20 +0200
Subject: [PATCH 1/4] ucm: fix handling of config files when file type is not
 reported correctly

Signed-off-by: Simon Busch <morphis@gravedo.de>
Signed-off-by: Martin Jansa <Martin.Jansa@gmail.com>
---
 src/ucm/parser.c | 27 +++++++++++++++++++++++++++
 1 file changed, 27 insertions(+)

diff --git a/src/ucm/parser.c b/src/ucm/parser.c
index d7517f6..7590b72 100644
--- a/src/ucm/parser.c
+++ b/src/ucm/parser.c
@@ -32,6 +32,9 @@
 
 #include "ucm_local.h"
 #include <dirent.h>
+#include <sys/types.h>
+#include <sys/stat.h>
+#include <unistd.h>
 
 /** The name of the environment variable containing the UCM directory */
 #define ALSA_CONFIG_UCM_VAR "ALSA_CONFIG_UCM"
@@ -1224,6 +1227,11 @@ int uc_mgr_import_master_config(snd_use_case_mgr_t *uc_mgr)
 
 static int filename_filter(const struct dirent *dirent)
 {
+	struct stat st;
+	char filename[MAX_FILE];
+	char *env = getenv(ALSA_CONFIG_UCM_VAR);
+
+
 	if (dirent == NULL)
 		return 0;
 	if (dirent->d_type == DT_DIR) {
@@ -1236,6 +1244,25 @@ static int filename_filter(const struct dirent *dirent)
 		}
 		return 1;
 	}
+	else if (dirent->d_type == DT_UNKNOWN) {
+		snprintf(filename, sizeof(filename)-1,
+			"%s", env ? env : ALSA_USE_CASE_DIR);
+		filename[MAX_FILE-1] = '\0';
+
+		if (stat(filename, &st) != 0)
+			return 0;
+
+		if (S_ISDIR(st.st_mode)) {
+			if (dirent->d_name[0] == '.') {
+				if (dirent->d_name[1] == '\0')
+					return 0;
+				if (dirent->d_name[1] == '.' &&
+					dirent->d_name[2] == '\0')
+					return 0;
+			}
+			return 1;
+		}
+	}
 	return 0;
 }
 

+		"Speaker"
+	]
+
+	EnableSequence [
+	]
+	DisableSequence [
+	]
+
+	Value {
+		PlaybackChannels "2"
+	}
+}
+
+SectionDevice."Speaker" {
+	#Name "Earpiece"
+	Comment "Speaker output"
+
+	# FIXME
+	ConflictingDevice [
+		"Earpiece"
+		"Headphones"
+	]
+
+	EnableSequence [
+	]
+	DisableSequence [
+	]
+
+	Value {
+		PlaybackChannels "2"
+	}
+}
+
+
+SectionDevice."Handset" {
+	Comment "Main mic input"
+
+	# FIXME
+	ConflictingDevice [
+		"Headset"
+	]
+
+	EnableSequence [
+	]
+	DisableSequence [
+	]
+
+	Value {
+		CaptureChannels "2"
+	}
+}
+
+SectionDevice."Headset" {
+	Comment "Headset mic input"
+
+	# FIXME
+	ConflictingDevice [
+		"Handset"
+	]
+
+	EnableSequence [
+	]
+	DisableSequence [
+	]
+
+	Value {
+		CaptureChannels "2"
+	}
+}

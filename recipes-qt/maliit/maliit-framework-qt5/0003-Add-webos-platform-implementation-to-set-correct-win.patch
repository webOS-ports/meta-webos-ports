+#include <QGuiApplication>
+#include <qpa/qplatformnativeinterface.h>
+
+#include "webosplatform.h"
+
+namespace Maliit
+{
+
+void WebosPlatform::setupInputPanel(QWindw *window, Maliit::Position)
+{
+    QPlatformNativeInterface *nativeInterface = QGuiApplication::platformNativeInterface();
+    window->create();
+    nativeInterface->setWindowProperty(window->handle(), QLatin1String("type"), QString("overlay"));
+}
+
+void WebosPlatform::setInputRegion(QWindw *window, const QRegion& region)
+{
+    QPlatformNativeInterface *nativeInterface = QGuiApplication::platformNativeInterface();
+    window->create();
+    nativeInterface->setWindowProperty(window->handle(), QLatin1String("mouseRegion"), QVariant(region));
+}
+
+} // namespace Maliit

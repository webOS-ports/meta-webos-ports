+                               uint32_t time,
+                               uint32_t type,
+                               uint32_t key,
+                               uint32_t modifiers,
+                               uint32_t nativeScanCode,
+                               uint32_t nativeVirtualKey,
+                               uint32_t nativeModifiers,
+                               const QString &text,
+                               uint32_t autorep,
+                               uint32_t count) Q_DECL_OVERRIDE;
 };
 
